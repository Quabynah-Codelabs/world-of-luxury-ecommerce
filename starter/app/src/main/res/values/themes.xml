<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!--Background color. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- Others. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">?attr/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status</item>
        <!-- Typography. -->
        <item name="textAppearanceHeadline4">@style/TextAppearance.Swan.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Swan.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Swan.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Swan.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Swan.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Swan.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Swan.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Swan.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Swan.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Swan.Overline</item>
        <!-- Shapes. -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearanceOverlay.Swan.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearanceOverlay.Swan.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearanceOverlay.Swan.LargeComponent
        </item>
        <!-- Widget. -->
        <item name="materialButtonStyle">@style/Widget.Swan.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Swan.Button.Outlined</item>
    </style>
</resources>