<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.worldofluxury.data.Product" />

        <variable
            name="product"
            type="Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.product.ProductFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/large_product_size"
                    android:contentDescription="@{product.name}"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:url="@{product.photoUrl}"
                    tools:scaleType="centerInside"
                    tools:src="@drawable/swan" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_name"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingHorizontal="@dimen/spacing_large"
                    android:paddingVertical="@dimen/spacing_normal"
                    android:text="@{product.name}"
                    android:textAppearance="?textAppearanceHeadline4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_image"
                    tools:text="@sample/products.json/data/name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_desc"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingHorizontal="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_xlarge"
                    android:text="@{product.description}"
                    android:textAppearance="?textAppearanceBody1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    tools:text="@sample/products.json/data/description" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:scaleType="centerInside"
                    android:translationZ="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/product_image"
                    app:onBackPressed="@{true}"
                    app:srcCompat="@drawable/ic_twotone_back" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/spacing_large"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_large"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- <com.google.android.material.button.MaterialButton
                 style="?materialButtonOutlinedStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="23"
                 app:icon="@drawable/ic_twotone_favorite_border" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_bag"
                android:layout_width="@dimen/spacing_none"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="@{product.freeShipping}"
                android:text="@{product.freeShipping ? @string/bag_now : @string/shipping_not_available}"
                app:icon="@drawable/ic_twotone_shopping_basket"
                tools:text="@string/bag_now" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>