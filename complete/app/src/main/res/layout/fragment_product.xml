<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.worldofluxury.data.Product" />

        <import type="io.worldofluxury.viewmodel.UserViewModel" />

        <import type="io.worldofluxury.viewmodel.ProductViewModel" />

        <import type="io.worldofluxury.viewmodel.AuthenticationState" />

        <variable
            name="productViewModel"
            type="ProductViewModel" />

        <variable
            name="authViewModel"
            type="UserViewModel" />

        <variable
            name="product"
            type="Product" />

        <variable
            name="host"
            type="android.app.Activity" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.WorldOfLuxury.Swipeable"
        tools:context=".view.product.ProductFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="?android:colorBackground"
                app:layout_scrollFlags="exitUntilCollapsed|snap"
                app:statusBarScrim="?android:colorBackground"
                app:titleEnabled="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/toolbar"
                    style="?toolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?actionBarSize"
                    android:overScrollMode="never"
                    android:paddingVertical="@dimen/spacing_normal"
                    app:layout_collapseMode="pin">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/back_button"
                        android:layout_width="?actionBarSize"
                        android:layout_height="@dimen/spacing_none"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_twotone_close"
                        android:tint="?attr/colorOnBackground"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:onBackPressed="@{true}" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/share_button"
                        android:layout_width="?actionBarSize"
                        android:layout_height="@dimen/spacing_none"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="@{() -> productViewModel.share(host, product)}"
                        android:src="@drawable/ic_twotone_share"
                        android:tint="?attr/colorOnBackground"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="@dimen/spacing_none"
                        android:layout_height="@dimen/spacing_none"
                        android:gravity="center"
                        android:text="@string/title_product"
                        android:textAppearance="@style/TextAppearance.WorldOfLuxury.AppBar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="@dimen/spacing_x128">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_vert_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/spacing_x36" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_vert_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/spacing_x36" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/bottom_horiz_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="@dimen/spacing_x24" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/large_product_size"
                    android:contentDescription="@{product.name}"
                    android:scaleType="centerCrop"
                    android:transitionName="@{product.id}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:url="@{product.photoUrl}"
                    tools:scaleType="centerInside"
                    tools:src="@drawable/swan" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_name"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_normal"
                    android:paddingVertical="@dimen/spacing_normal"
                    android:text="@{product.name}"
                    android:textAlignment="center"
                    android:textAppearance="?textAppearanceHeadline4"
                    app:layout_constraintEnd_toStartOf="@id/right_vert_guide"
                    app:layout_constraintStart_toEndOf="@id/left_vert_guide"
                    app:layout_constraintTop_toBottomOf="@id/product_image"
                    tools:text="@sample/products.json/data/name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_price"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_large"
                    android:paddingVertical="@dimen/spacing_small"
                    android:text="@{product.formattedPrice}"
                    android:textAlignment="center"
                    android:textAppearance="?textAppearancePrice"
                    app:layout_constraintEnd_toStartOf="@id/right_vert_guide"
                    app:layout_constraintStart_toEndOf="@id/left_vert_guide"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    tools:text="@sample/products.json/data/price" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_desc"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_x24"
                    android:text="@{product.description}"
                    android:textAlignment="viewStart"
                    android:textAppearance="?textAppearanceBody1"
                    app:layout_constraintEnd_toStartOf="@id/right_vert_guide"
                    app:layout_constraintStart_toEndOf="@id/left_vert_guide"
                    app:layout_constraintTop_toBottomOf="@id/product_price"
                    tools:text="@sample/products.json/data/description" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    app:gone="@{true}"
                    app:layout_constraintEnd_toStartOf="@id/right_vert_guide"
                    app:layout_constraintStart_toEndOf="@id/left_vert_guide"
                    app:layout_constraintTop_toBottomOf="@id/product_desc">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/color_header"
                        android:layout_width="@dimen/spacing_none"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:paddingVertical="@dimen/spacing_large"
                        android:text="@string/select_color"
                        android:textAppearance="?textAppearanceCaption"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:textAllCaps="true" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/colors_list"
                        android:layout_width="@dimen/spacing_none"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:checkedButton="@id/color_amber"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/color_header"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/color_amber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:text=""
                            app:backgroundTint="@color/amber" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:text=""
                            app:backgroundTint="@color/green" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            app:backgroundTint="@color/blacker" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/size_header"
                        android:layout_width="@dimen/spacing_none"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:paddingVertical="@dimen/spacing_large"
                        android:text="@string/select_size"
                        android:textAppearance="?textAppearanceCaption"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/colors_list"
                        app:textAllCaps="true" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/size_list"
                        android:layout_width="@dimen/spacing_none"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:checkedButton="@id/size_l"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/size_header"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_x"
                            style="?materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:text="@string/x" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_m"
                            style="?materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:text="@string/m" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_l"
                            style="?materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:text="@string/l" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/size_xl"
                            style="?materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/xl" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="@string/buy_now"
            android:onClick="@{() -> productViewModel.addToCart(product)}"
            android:scaleType="center"
            android:src="@{product.favorite ? @drawable/ic_twotone_remove_shopping_cart : @drawable/ic_twotone_add_shopping_cart}"
            android:translationZ="@dimen/z_product_card"
            app:fabCustomSize="@dimen/spacing_x72"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.WorldOfLuxury.SmallComponent.FAB"
            tools:src="@drawable/ic_twotone_add_shopping_cart" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>