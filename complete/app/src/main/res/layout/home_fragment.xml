<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.worldofluxury.viewmodel.ProductViewModel" />

        <import type="io.worldofluxury.viewmodel.AuthViewModel.AuthenticationState" />

        <import type="io.worldofluxury.viewmodel.AuthViewModel" />

        <import type="io.worldofluxury.util.ConstantsKt" />

        <variable
            name="authViewModel"
            type="AuthViewModel" />

        <variable
            name="vm"
            type="ProductViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/home_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.product.HomeFragment"
        tools:openDrawer="start">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liftOnScroll="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/promo_header_height"
                    app:contentScrim="?android:colorBackground"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll"
                    app:statusBarScrim="?android:colorBackground"
                    app:titleEnabled="false"
                    app:toolbarId="@id/toolbar">

                    <!-- todo: generate a coupon code & replace this with dynamic data instead -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="?attr/colorSecondaryVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/spacing_xlarge"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.95">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/spacing_normal"
                            android:text="@string/coupon_header"
                            android:textAppearance="?textAppearanceSubtitle1" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_normal"
                            android:paddingHorizontal="@dimen/spacing_large"
                            android:paddingVertical="@dimen/spacing_normal"
                            android:text="@string/coupon_percentage"
                            android:textAppearance="?textAppearanceHeadline4"
                            app:textAllCaps="true" />

                        <com.google.android.material.button.MaterialButton
                            style="?materialButtonOutlinedStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/spacing_x48"
                            android:layout_marginVertical="@dimen/spacing_normal"
                            android:text="@string/coupon_code" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="@string/coupon_desc"
                            android:textAlignment="center"
                            android:textAppearance="?textAppearanceSubtitle1" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/spacing_normal"
                        app:layout_collapseMode="pin"
                        app:menu="@menu/toolbar_menu"
                        app:subtitle="@string/app_desc"
                        app:title="@string/app_name" />

                    <!-- @{authViewModel.currentUser.name} -->
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <!--<androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_name"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/spacing_normal"
                    android:textAlignment="viewStart"
                    android:textAppearance="?textAppearanceHeadline4"
                    app:gone="@{authViewModel.authState != AuthenticationState.AUTHENTICATED}"
                    app:layout_constraintEnd_toStartOf="@id/right_vert_guide"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/left_vert_guide"
                    app:layout_constraintTop_toBottomOf="@id/top_horiz_guide"
                    app:user="@{authViewModel.currentUser}"
                    tools:text="Hey, Quabynah" />-->

                <!--<androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/search_container"
                    android:layout_width="@dimen/spacing_none"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:background="@drawable/outlined_border"
                    android:clickable="true"
                    android:clipToPadding="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@id/right_vert_guide"
                    app:layout_constraintStart_toEndOf="@id/left_vert_guide"
                    app:layout_constraintTop_toBottomOf="@id/top_horiz_guide">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="@dimen/spacing_none"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="?emphasisMedium"
                        android:gravity="start|center_vertical"
                        android:text="@string/search"
                        android:textAppearance="?textAppearanceHeadline6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/search"
                        android:src="@drawable/ic_twotone_search" />

                </androidx.appcompat.widget.LinearLayoutCompat>-->

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/home_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="?android:colorBackground"
                    android:paddingHorizontal="@dimen/spacing_normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabBackground="?android:colorBackground"
                    app:tabGravity="fill"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorGravity="center"
                    app:tabInlineLabel="true"
                    app:tabMode="scrollable">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Trousers"
                        tools:visibility="visible" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Sweatshirt"
                        tools:visibility="visible" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Coat"
                        tools:visibility="visible" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Blouse"
                        tools:visibility="visible" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Shirt"
                        tools:visibility="visible" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Dress"
                        tools:visibility="visible" />

                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_tabs"
                    app:snackbar="@{vm.toastLiveData}" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_vert_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/spacing_x36" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_vert_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/spacing_x36" />

                <!-- <androidx.constraintlayout.widget.Guideline
                     android:id="@+id/top_horiz_guide"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     app:layout_constraintGuide_begin="@dimen/spacing_xlarge" />-->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/bottom_horiz_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="@dimen/spacing_none" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sidebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:itemShapeInsetEnd="@dimen/spacing_large"
            app:itemShapeInsetStart="@dimen/spacing_large"
            app:menu="@menu/home_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>