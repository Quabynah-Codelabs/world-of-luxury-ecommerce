<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldOfLuxury" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- System UI -->
        <item name="android:colorBackground">@color/background</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Error brand color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status</item>
        <item name="scrimBackground">@color/scrim</item>
        <item name="statusBarScrim">?attr/scrimBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/is_light_status
        </item>
        <item name="android:navigationBarColor">@color/scrim</item>
        <!-- Typography. -->
        <item name="textAppearanceHeadline3">@style/TextAppearance.WorldOfLuxury.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.WorldOfLuxury.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.WorldOfLuxury.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.WorldOfLuxury.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.WorldOfLuxury.Button</item>
        <item name="textAppearanceBody1">@style/TextAppearance.WorldOfLuxury.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.WorldOfLuxury.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.WorldOfLuxury.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.WorldOfLuxury.Subtitle2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.WorldOfLuxury.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.WorldOfLuxury.Overline</item>
        <item name="textAppearancePrice">@style/TextAppearance.WorldOfLuxury.Price</item>
        <!-- Customize your theme here. -->
        <item name="emphasisLow">0.35</item>
        <item name="emphasisMedium">0.65</item>
        <item name="emphasisHigh">0.87</item>
        <item name="tabStyle">@style/Widget.WorldOfLuxury.Tab</item>
        <item name="materialButtonStyle">@style/Widget.WorldOfLuxury.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.WorldOfLuxury.Button.Outlined</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="searchViewStyle">@style/Widget.WorldOfLuxury.SearchView</item>
        <item name="fabSize">@dimen/fab_size</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="navigationViewStyle">@style/Widget.WorldOfLuxury.NavigationView</item>
        <!-- Dialogs -->
        <item name="materialAlertDialogTheme">@style/Theme.WorldOfLuxury.AlertDialog</item>

        <!-- Custom theme attrs. -->
        <item name="colorControlLight">@color/color_control_light</item>
        <item name="colorSurfaceSecondary">@color/color_surface_secondary</item>
        <item name="navigationBarDividerColor">?attr/colorControlLight</item>

        <!-- Page transitions. -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

        <!-- Shapes. -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearanceOverlay.WorldOfLuxury.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearanceOverlay.WorldOfLuxury.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearanceOverlay.WorldOfLuxury.LargeComponent
        </item>
    </style>

    <!-- Splash Theme. -->
    <style name="Theme.WorldOfLuxury.Splash">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Onboarding Theme. -->
    <style name="Theme.WorldOfLuxury.Onboarding">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- Search Theme. -->
    <style name="Theme.WorldOfLuxury.Search">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">?attr/scrimBackground</item>
    </style>

    <style name="Theme.WorldOfLuxury.Swipeable">
        <item name="android:windowSwipeToDismiss">?attr/scrimBackground</item>
    </style>

</resources>