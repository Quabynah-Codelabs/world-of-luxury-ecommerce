<resources>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Favorites" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">40%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Nav" parent="">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">40%</item>
    </style>

    <style name="Widget.WorldOfLuxury.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">?textAppearanceBody1</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Widget.WorldOfLuxury.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingStart">@dimen/spacing_xlarge</item>
        <item name="android:paddingEnd">@dimen/spacing_xlarge</item>
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
        <item name="iconPadding">@dimen/spacing_x36</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="Widget.WorldOfLuxury.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingStart">@dimen/spacing_xlarge</item>
        <item name="android:paddingEnd">@dimen/spacing_xlarge</item>
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="iconPadding">@dimen/spacing_x36</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="Widget.WorldOfLuxury.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">?android:colorBackground</item>
        <item name="submitBackground">?android:colorBackground</item>
        <item name="voiceIcon">@drawable/ic_twotone_voice</item>
        <item name="closeIcon">@drawable/ic_twotone_close</item>
        <item name="closeIconEnabled">true</item>
        <item name="suggestionRowLayout">@layout/search_suggestion</item>
        <item name="searchIcon">@drawable/ic_twotone_search</item>
        <item name="searchHintIcon">@drawable/ic_twotone_search</item>
        <item name="goIcon">@drawable/ic_twotone_right</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="defaultQueryHint">@string/search_hint</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="Widget.WorldOfLuxury.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/navigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.WorldOfLuxury.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/maven_pro_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
    </style>

    <style name="Theme.WorldOfLuxury.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/AlertDialog.Style</item>
        <item name="buttonBarStyle">@style/AlertDialog.ButtonBar</item>
        <item name="dialogPreferredPadding">@dimen/dialogPreferredPadding</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/AlertDialog.TitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
    </style>

    <style name="AlertDialog.Style" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/AlertDialog.ShapeAppearance</item>
    </style>

    <style name="AlertDialog.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/dialog_corner_radius</item>
    </style>

</resources>